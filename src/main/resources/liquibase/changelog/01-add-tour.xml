<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="01" author="lma">
        <createTable tableName="tour">
            <column name="id" type="int" autoIncrement="true" startWith="1" incrementBy="1">
                <constraints primaryKey="true" primaryKeyName="PK_tour_id"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar(1024)"/>
            <column name="duration" type="time">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

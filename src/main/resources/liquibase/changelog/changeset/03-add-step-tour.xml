<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">
	<changeSet id="02" author="lma">
		<createTable tableName="stepTour">
			<column name="id_tour" type="int" autoIncrement="true">
				<constraints nullable="false" foreignKeyName="fk_steptour_tour" references="tour(id)"/>
			</column>
			<column name="id_step" type="int" autoIncrement="true">
				<constraints nullable="false" foreignKeyName="fk_steptour_step" references="step(id)"/>
			</column>
			<column name="order" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addUniqueConstraint columnNames="id_tour, id_step, order"
			constraintName="step_tour_unique" tableName="stepTour"/>
	</changeSet>
</databaseChangeLog>